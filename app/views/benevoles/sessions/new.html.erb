<%= render partial: "layouts/navbar" %>


<div class="page-container">

  <h2>Se connecter en tant que bénévole</h2>


  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <div class="form-line">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.label :mot_de_passe %>
      <%= f.password_field :password, required: false %>
      <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <%= f.label :se_souvenir_de_moi %>
      <div class="form-actions">
        <%= f.button :submit, "Se connecter" %>
      </div>
      <% end %>
      <%= render "benevoles/shared/links" %>
    </div>
</div>
</div>
