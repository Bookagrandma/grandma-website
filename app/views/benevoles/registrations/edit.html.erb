<%= render partial: "layouts/navbar" %>

<div class="page-container">

  <h2>Mettre à jour vos informations de <%= current_benevole.firstname %></h2>
  <div class="decor-line"></div>

  <h3>Ma photo de profil<span>:</span></h3>

  <%= form_for @benevole, :html => {:multipart => true} do |f| %>
  <p><%= f.file_field :avatar %></p>
  <p><%= f.submit %></p>
<% end %>


  <h3>Mes informations <span>:</span></h3>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="form-line">
        <!-- Email & name -->
        <div>
          <%= f.input :email, required: true, autofocus: true %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
        </div>

        <div>
          <%= f.label :firstname %><br />
          <%= f.text_field :firstname%>
        </div>
        </div>

        <div class="form-line">
          <!-- Last name & bday -->
          <div>
            <%= f.label :lastname %><br />
            <%= f.text_field :lastname%>
          </div>
          <div>
            <%= f.label :birthday %><br />
            <%= f.text_field :birthday%>
          </div>
        </div>

        <div class="form-line">
          <!-- Adresse & zip -->
          <div>
            <%= f.label :address %><br />
            <%= f.text_field :address%>
          </div>
          <div>
            <%= f.label :zip %><br />
            <%= f.text_field :zip%>
          </div>
      </div>

      <div class="form-line">
        <!-- City & phone -->
        <div>
          <%= f.label :city %><br />
          <%= f.text_field :city%>
        </div>
        <div>
          <%= f.label :phone %><br />
          <%= f.text_field :phone%>
        </div>
        <div>
          <%= f.label :motivation %><br />
          <%= f.text_field :motivation%>
        </div>
      </div>

      <%= f.input :password, autocomplete: "off", hint: "Ne pas compléter si vous ne souhaitez pas le changer", required: false %>
      <%= f.input :password_confirmation, required: false %>
      <%= f.input :current_password, hint: "Entrez votre mot de passe pour confirmer les changements", required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Mettre à jour" %>
    </div>
  <% end %>

  <h3>Supprimer mon compte <span>:</span></h3>

  <p>Vous n'êtes plus interessé par le service ? <br>
  <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => "cancel-links" %></p>

  <%= link_to "Back", :back, :class => "nav-links" %>

</div>
