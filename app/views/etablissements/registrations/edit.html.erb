<%= render partial: "layouts/navbar" %>

<div class="page-container">

<h2>Mettre à jour les informations de <%= current_etablissement.name %></h2>
<div class="decor-line"></div>

<h3>Mes informations <span>:</span></h3>

<h3>Ma photo de profil<span>:</span></h3>

  <%= form_for @etablissement, :html => {:multipart => true} do |f| %>
  <p><%= f.file_field :avatar %></p>
  <p><%= f.submit %></p>
<% end %>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= f.error_notification %>

  <div class="form-inputs">
    <div class="form-line">
      <%= f.input :email, required: true, autofocus: true %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <%= f.label :name %><br />
      <%= f.text_field :name%>
    </div>
    <div class="form-line">
      <div>
        <%= f.label :address %><br />
        <%= f.text_field :address%>
      </div>
      <div>
        <%= f.label :zip %><br />
        <%= f.text_field :zip%>
      </div>
    </div>
    <div class="form-line">
      <div>
        <%= f.label :city %><br />
        <%= f.text_field :city%>
      </div>
      <div>
        <%= f.label :phone %><br />
        <%= f.text_field :phone%>
      </div>
      <div>
        <%= f.label :description %><br />
        <%= f.text_field :description%>
      </div>
    </div>
    <div class="form-lin">
      <%= f.input :password_confirmation, required: false %>
      <%= f.input :password, autocomplete: "off", hint: "Ne pas compléter si vous ne souhaitez pas le changer", required: false %>
    </div>
    <%= f.input :current_password, hint: "Entrez votre mot de passe pour confirmer les changements", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Mettre à jour" %>
  </div>
<% end %>

<h3>Supprimer mon compte <span>:</span></h3>

<p>Vous n'êtes plus interessé par le service ?<br><%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'cancel-links' %></p>

<%= link_to "Back", :back, :class => 'nav-links' %>

</div>
