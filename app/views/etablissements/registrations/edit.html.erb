<%= render partial: "layouts/navbar" %>

<div class="page-container">

<h2>Mettre à jour les informations de <%= current_etablissement.name %></h2>
<div class="decor-line"></div>

<h3>Mes informations <span>:</span></h3>

<h3>Ma photo de profil<span>:</span></h3>

  <%= form_for @etablissement, :html => {:multipart => true} do |f| %>
  <p><%= f.file_field :avatar %></p>
  <p><%= f.submit %></p>
<% end %>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= f.error_notification %>

  <div class="form-inputs">
    <div class="form-line">
      <div>
      <%= f.label :email %> obligatoire
          <%= f.email_field :email, required: true, autofocus: true %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
</div>
<div>
       <%= f.label :addresse %><br />
        <%= f.text_field :address%>
      </div>
    </div>
    <div class="form-line">
      <div>
          <%= f.label :nom %><br />
          <%= f.text_field :name%>  
      </div>
      <div>
          <%= f.label :code_postal %><br />
          <%= f.text_field :zip%>
      </div>
    </div>

    <div class="form-line">
      <div>
        <%= f.label :ville %><br />
        <%= f.text_field :city%>
      </div>
      <div>
       <%= f.label :téléphone %><br />
        <%= f.text_field :phone%>
      </div>
    </div>

     <div class="form-lin"> 
      <%= f.label :département %><br />
        <%= f.text_field :dept %>
     <%= f.label :description %><br />
        <%= f.text_field :description%>
    </div>

    <div class="form-line">
      <div>
        <%= f.label :mot_de_passe %> <br />
        <%= f.password_field :password, autocomplete: "off", required: false %>
      </div>
      <div> <%= f.label :mot_de_passe_actuel %> obligatoire pour confirmer les changements
        <%= f.password_field :current_password, hint: "Entrez votre mot de passe pour confirmer les changements", required: true %>
      </div>
    </div>


    <div class="form-line">
      <div>
        <%= f.label :confirmation_mot_de_passe %><br />
        <%= f.password_field  :password_confirmation, required: false %>
      </div>
    </div>

  <div class="form-actions">
    <%= f.button :submit, "Mettre à jour" %>
  </div>

  <%= link_to "Annuler", :back, :class => 'nav-links' %>

<% end %>
<br>
<h3>Supprimer mon compte <span>: </span><%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Certain?" }, method: :delete, :class => 'cancel-links' %></h3>


<br>

</div>
