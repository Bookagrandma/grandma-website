<%= render partial: "layouts/navbar" %>

<div class="page-container hopital-profile">

  <h2>Bienvenue sur la page de <%= @etablissement.name%></h2>
  <div class="decor-line"></div>
    <div class="profile-card-container">
      <div class="profile-card">
        <h2><i class="fa fa-map-marker" aria-hidden="true"></i>Localisation</h2>
        <h3>Address</h3>
        <p><%= @etablissement.address%></p>

        <h3>ZIP</h3>
        <p><%= @etablissement.zip%></p>

        <h3>City</h3>
        <p><%= @etablissement.city%></p>

        <h3>Dept</h3>
        <p><%= @etablissement.dept%></p>
      </div>

      <div class="profile-card">
        <h2><i class="fa fa-phone" aria-hidden="true"></i>Contact</h2>
        <h3>Category</h3>
        <p><%= @etablissement.category%></p>

        <h3>Phone</h3>
        <p><%= @etablissement.phone%></p>

    <td><%= link_to 'Revenir à l\'accueil', root_path %></td>
      </div>
  </div>


  <h3>NEW MISSION for id <%= @etablissement.id %></h3> 
  <%= link_to 'Proposer ses services', new_etablissement_mission_path(@etablissement) %>

  <br>


  <%= link_to 'Retour liste etablissemet', etablissements_path %> |
   <%= link_to 'Supprimer l\'établissement', @etablissement,
                method: :delete,
                data: { confirm: 'Etes vous certain?' } %>
  </table>


         <% @missions.each do |mission| %>
      <tr>
        
        <td><%= mission.title %></td>
        <td><%= mission.body %></td>
        <td><%= mission.place %></td>
        <td><%= mission.appointment %></td>
        <td><%= mission.benevole_id %></td>
        <td><%= mission.etablissement_id %></td>
        <td><%= link_to 'Show', mission %></td>
        <td><%= link_to 'Edit', edit_mission_path(mission) %></td>
        <td><%= link_to 'Destroy', mission, method: :delete, data: { confirm: 'Are you sure?' } %></td>


      </tr> <br>

    <% end %> 


</div>

