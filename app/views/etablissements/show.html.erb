<%= render partial: "layouts/navbar" %>

<div class="page-container hopital-profile">

  <h2>Bienvenue sur la page de <span><%= @etablissement.name%></span></h2>
  <div class="decor-line"></div>
    <div class="profile-card-container">
      <div class="profile-card">
        <h2><i class="fa fa-map-marker" aria-hidden="true"></i>Localisation</h2>
        <h4>Address</h4>
        <p><%= @etablissement.address%></p>

        <h4>ZIP</h4>
        <p><%= @etablissement.zip%></p>

        <h4>City</h4>
        <p><%= @etablissement.city%></p>

        <h4>Dept</h4>
        <p><%= @etablissement.dept%></p>
      </div>

      <div class="profile-card">
        <h2><i class="fa fa-phone" aria-hidden="true"></i>Contact</h2>
        <h4>Category</h4>
        <p><%= @etablissement.category%></p>

        <h4>Phone</h4>
        <p><%= @etablissement.phone%></p>
      </div>
  </div>


  <h3>Les missions de <span><%= @etablissement.name %></span></h3>
  <%= link_to 'Je propose une nouvelle mission', new_etablissement_mission_path(@etablissement), :class => 'edit-info' %>

  <br>

        <div class="profile-card mission-card">

         <% @missions.each do |mission| %>

        <h4><%= mission.title %></h4>
        <p class="comment-links">Mission proposée par <%= link_to mission.benevole.firstname,  benevole_path(mission.benevole_id) %></p>

        <p><%= mission.body %></p>
        <%= mission.appointment %>
        <p class="comment-links">Mission pour <%= link_to mission.etablissement.name, etablissement_path(mission.etablissement_id) %></p>
        <% if benevole_signed_in? && current_benevole.id == mission.benevole_id %>
        <%= link_to 'Edit', edit_mission_path(mission), :class => 'edit-links' %>
        <%= link_to 'Destroy', mission, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'cancel-links' %>
        <% else %>
        <% end %>


    <% end %>
    </div>
    <%= link_to 'Revenir à l\'accueil', root_path, :class=> 'nav-links' %>
    <%= link_to 'Retour liste à la liste des établissements', etablissements_path, :class => 'nav-links' %>
    <% if etablissement_signed_in? && current_etablissement.id == mission.etablissement_id %>
     <%= link_to 'Supprimer l\'établissement', @etablissement,
                  method: :delete,
                  data: { confirm: 'Etes vous certain?' }, :class => 'nav-links' %>
    <% else %>
    <% end %>
</div>

