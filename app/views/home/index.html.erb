  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Book a Grandma</a>
      </div>
      <ul class="nav navbar-nav">
        <li><a href="#">Home</a></li>
        <% if benevole_signed_in? %>
        <li><%= link_to "Créer une mission", new_mission_path %></li>
        <li><%#= link_to "Votre profil", benevole_profil_path(@benevole) %></li>
        <% else %>
        <li><a href="missions#index">Les Missions</a></li>
        <% end %>
      </ul>
    </div>
    <div class="account-infos">
      <ul>
        <li>Bénévoles : </li>
        <% if benevole_signed_in? %>
        <li><h3>Vous êtes connecté en tant que bénévole</h3></li>
        <li><h6>Bienvenue <strong><%= current_benevole.firstname %></strong></%></h6></li>
        <li><%= link_to "Sign out", destroy_benevole_session_path, method: :delete %>|</li>
        <li><%= link_to "Edit Account", edit_benevole_registration_path %>|</li>
        <li><%= link_to "Voir les établissements déjà partenaires", etablissements_path %>|</li>
        <li><%#= link_to "Votre profil", current_benevole_profil %></li>
        <% else %>
        <li><%= link_to "sign in", new_benevole_session_path %>|</li>
        <li><%= link_to "sign up", new_benevole_registration_path %></li>
        <% end %>
      </ul>
    </div>
    <div class="account-infos">
      <ul>
        <li>Établissements de santé : </li>
        <% if etablissement_signed_in? %>
        <li><h3>Vous êtes connecté en tant qu'établissement partenaire</h3></li>
        <h6>Bienvenue <strong><%= current_etablissement.name %></strong>|</h6>
        <li><%= link_to "Sign out", destroy_etablissement_session_path, method: :delete %>|</li>
        <li><%= link_to "Edit Account", edit_etablissement_registration_path %>|</li>
        <li><%#= link_to "Voir les établissements déjà partenaires", etablissements_path %></li>
        <% else %>
        <li><%= link_to "sign in", new_etablissement_session_path %>|</li>
        <li><%= link_to "sign up", new_etablissement_registration_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>

